<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp">

    <TableRow
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customer Name"
            android:textSize="10sp"
            android:padding="5dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:background="@color/cardview_shadow_start_color"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item Name"
            android:textSize="10sp"
            android:padding="5dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:background="@color/cardview_shadow_start_color"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity"
            android:textSize="10sp"
            android:padding="5dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:background="@color/cardview_shadow_start_color"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rental Duration"
            android:textSize="10sp"
            android:padding="5dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:background="@color/cardview_shadow_start_color"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rental Date"
            android:textSize="10sp"
            android:padding="5dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:background="@color/cardview_shadow_start_color"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Price"
            android:textSize="10sp"
            android:padding="5dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:background="@color/cardview_shadow_start_color"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/transaction_cust_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="10sp"
            android:padding="5dp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/transaction_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="10sp"
            android:padding="5dp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/transaction_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="10dp"
            android:padding="5dp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/transaction_rent_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="10sp"
            android:padding="5dp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/transaction_rent_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="10sp"
            android:padding="5dp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/transaction_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="10sp"
            android:padding="5dp"
            android:textAlignment="center"/>
    </TableRow>
</TableLayout>