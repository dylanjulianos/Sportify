<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/stuff"/>

        <TextView
            android:id="@+id/appTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/chicle"
            android:paddingTop="5dp"
            android:text="sportify"
            android:textAlignment="center"
            android:textColor="#0089EC"
            android:textSize="64dp" />

        <TextView
            android:id="@+id/appSubtitle"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/inter_semibold"
            android:maxLines="2"
            android:paddingTop="5dp"
            android:text="help you provide stuffs to gain the best experience in every moment"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/textfield_EmailSignIn"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/edittext"
            android:fontFamily="@font/inter_semibold"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/textfield_PasswordSignIn"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/edittext"
            android:fontFamily="@font/inter_semibold"
            android:hint="Password"
            android:inputType="textPassword"
            android:textSize="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="Do not have an account?"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/createAccountButtonInSignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/inter_semibold"
            android:text="Create one"
            android:textSize="14dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/signinButton"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/SportifyPrimaryColor"
            android:fontFamily="@font/inter_semibold"
            android:text="Sign In"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            app:cornerRadius="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="By signing in, you are accept our Terms of use and Privacy Policy"
            android:textSize="8dp"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>